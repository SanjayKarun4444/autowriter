{
  "manifest_version": 3,
  "name": "Typeahead â€” AI Autocomplete for Google Docs",
  "short_name": "Typeahead",
  "version": "1.1.0",
  "description": "Smart Compose-style AI autocomplete for Google Docs. Accept with Tab, dismiss with Esc.",

  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://docs.google.com/*"],

  "background": {
    "service_worker": "src/background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://docs.google.com/document/*"],
      "js": ["src/content.bundle.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Typeahead",
    "default_icon": {
      "16":  "icons/icon16.png",
      "32":  "icons/icon32.png",
      "48":  "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["styles/content.css", "styles/tokens.css"],
      "matches": ["https://docs.google.com/*"]
    }
  ]
}